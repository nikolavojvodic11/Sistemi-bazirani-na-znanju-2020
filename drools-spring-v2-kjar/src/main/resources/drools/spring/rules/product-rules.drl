rule "Zitarice"
	agenda-group "Product"
	salience 10
	no-loop true
	lock-on-active true
    when
        //conditions
        $var : QualityParamList($param : parametars)
        Number ( $n : intValue >= 3 ) from accumulate(
				QualityParamDTO( paramCode == "PSENICA" || paramCode == "KUKURUZ" || paramCode == "JECAM" || paramCode == "OVAS" || paramCode == "RAZ") from $param,
					init ( int count = 0; ),
					action ( count++; ),
					result ( count )
				)
    then
        //actions
        double ver = 0;
        if($n == 6){
        	ver = 3000;
        }else{
        	ver = $n/6.0*100.0;
        }
		$var.getMostLikelyProduct().put("ZITARICE", ver);
		update($var);

end

